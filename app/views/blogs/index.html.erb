<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
	<td><%=Iconv.new('utf-8', 'latin8').iconv Iconv.new('latin1', 'utf-8').iconv(blog.title)%></td>
    <td><%#= CharDet.detect("整个")['encoding'] %></td>
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Blog', new_blog_path %>
